#escape \\m
defscrollback 5000
vbell off
startup_message off
altscreen on

# look and feel

activity "Activity in %t(%n)"

# bind keys
bind 'l' lastmsg
bind 'q' meta
bind ' ' screen
bind 'a' title
bind 'h' split -h
bind 'v' split -v
bind 'x' remove
bind 'o' only
bind 'r' resize

# bind buffer
bind b eval writebuf "exec !!! $HOME/.ratpoison/screenout"


